<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtNombreProducto" Width="200" Height="30" VerticalAlignment="Top" Margin="10" />
        <Button Content="Buscar" Width="100" Height="30" VerticalAlignment="Top" Margin="220,10,0,0" Click="BuscarProducto_Click"/>
        <DataGrid x:Name="dgProductos" Margin="10,50,10,10" AutoGenerateColumns="True"/>
    </Grid>
</Window>
